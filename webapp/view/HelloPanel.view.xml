<mvc:View controllerName="sapui5.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">
	<Panel headerText="{i18n>healloPanelTitle}" class="sapUIResponsiveMargin myCustomCss" width="auto">
		<content>
			<Button id="helloDialogButton" icon="sap-icon://globe" text="{i18n>openDialogButtonText}" press=".onOpenDialog"  class="sapUiSmallMargin  "/>
			<Button text="{i18n>showHelloButtonText}" press=".onShowHello" type="Unstyled" class="sapUiSmallMargin myCustomButton "/>
			<Input value="{/recipient/name}" valueLiveUpdate="true" width="60%"/>
			<Text text="Hello {/recipient/name}" class="sapUiSmallMargin myCustomText sapTheminglight-asColor"/>
		</content>
	</Panel>
	<core:Fragment fragmentName="sapui5.view.Form01" type="XML" />
</mvc:View>